{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"rootDir": "./",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowArbitraryExtensions": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
